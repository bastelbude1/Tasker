#!/bin/bash
# Mock command for port 443 checking
# Returns 0 if port 443 is "open", 1 if "closed"

# Simulate based on hostname
if [[ "$1" == "localhost" ]]; then
    echo "Port 443 is open on localhost"
    exit 0
elif [[ "$1" == "http-only-server" ]]; then
    echo "Port 443 is blocked on http-only-server"
    exit 1
else
    echo "Port 443 check on $1"
    exit 0
fi